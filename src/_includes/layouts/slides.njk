{% from "macros.njk" import icon, logo %}

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>(Slides) {{ title }} | {{ site.title }}</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,700;1,700&family=Open+Sans:ital,wght@0,400;0,700;1,400;1,700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="{{ '/reveal/dist/reveal.css' | url }}">
  {% set css %}{% include "css/slides.css" %}{% endset %}
  <style>{{ css | postcss('slides') | safe }}</style>
  <link rel="stylesheet" href="{{ '/reveal/plugin/highlight/github-dark-dimmed.css' | url }}">
  {% include "meta.njk" %}
</head>
<body>
  <div class="reveal">
    <div class="slides">
      <section>
        <p class="font-mono flex items-center justify-center tracking-wide lowercase">{{ logo(class='h-7 w-7 mr-2.5') }} {{ site.title }} #{{ order + 1 }}</p>
        <h1>{{ title }}</h1>
      </section>
      {{ content | safe }}
      <section>
        <h2>Questions?</h2>
      </section>
    </div>
  </div>

  <script src="{{ '/reveal/dist/reveal.js' | url }}"></script>
  <script src="{{ '/reveal/plugin/highlight/highlight.js' | url }}"></script>
  <script>
    // See https://revealjs.com/config/
    Reveal.initialize({
      hash: true,
      hashOneBasedIndex: false,
      plugins: [RevealHighlight],
      navigationMode: "linear",
    });

    if (window.location.search.includes('print-pdf')) {
      // Give some time for things to load
      setTimeout(window.print, 1500)
    }
  </script>
</body>
</html>
