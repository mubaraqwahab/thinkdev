---
layout: layouts/base
tags: lesson
---

{% from "macros.njk" import icon, script %}

<div class="container py-4 mx-auto lg:py-8 lg:grid lg:grid-cols-[220px,1fr] lg:gap-10">
  <div
    class="
      sticky top-[53px] left-0 z-20 -mt-4 py-2 mb-6
      bg-white dark:bg-gray-900 dark:border-gray-700 border-b
      lg:static lg:z-auto lg:my-0 lg:py-0 lg:border-b-0
    "
  >
    <button
      id="outlineToggle"
      type="button"
      aria-expanded="false"
      aria-controls="outlineNav"
      class="inline-flex font-bold items-center text-gray-900 dark:text-white lg:hidden"
    >
      {{ icon("caret-right-fill", class="mr-2 motion-safe:transition-transform motion-safe:duration-300") }}
      Outline
    </button>
    <nav
      class="
        side-nav
        hidden py-2 lg:mt-0 lg:block lg:border-b-0 lg:border-r lg:py-0 lg:pr-8 lg:pl-1
        lg:h-[calc(100vh-118px)] lg:sticky lg:top-[86px] lg:left-0 lg:overflow-y-auto
        dark:border-gray-700
      "
      id="outlineNav"
      aria-label="Outline"
    >
      <ol class="">
        {% for lesson in collections.all | eleventyNavigation %}
          <li class="before:hidden">
            <a href="{{ lesson.url | url }}" {% if page.url == lesson.url %} aria-current="page" {% endif %} class="">
              {{ lesson.title }}
            </a>
          </li>
        {% endfor %}
      </ol>
    </nav>
  </div>

  <div>
    <main id="main" class="mx-auto relative lg:mx-0">
      <article>
        <h1>{{ title }}</h1>
        <p class="lead">{{ excerpt }}</p>
        {% if collections.slides | find("data.order", eleventyNavigation.order) %}
          <p>
            <a href="{{ '/slides/' ~ page.fileSlug | url }}">Slides {{ icon('display', class='mb-0.5') }}</a>&nbsp;
            (<a
              href="{{ '/slides/' ~ page.fileSlug ~ '.pdf' | url }}"
              download="{{ page.fileSlug ~ '.pdf' }}"
              title="Download slides as PDF"
              aria-label="Download slides as PDF"
            >PDF {{ icon("file-pdf-fill", class='text-red-600 mb-0.5') }}</a>)
          </p>
        {% endif %}

        {{ content | safe }}

        <p class="text-sm !mt-10 !mb-0">
          Last updated <time datetime="{{ page.date | isostring }}">{{ page.date | shortdate }}</time>
        </p>
      </article>

      <nav aria-label="Previous/next lesson" class="flex justify-between mt-10">
        {% set lessons = collections.all | eleventyNavigation %}
        {% set prevLesson = lessons | find("order", eleventyNavigation.order - 1) %}
        {% if prevLesson %}
          <a href="{{ prevLesson.url | url }}" class="inline-flex items-center mr-auto">
            {{ icon('arrow-left', class='mr-2') }}
            Previous
          </a>
        {% endif %}
        {% set nextLesson = lessons | find("order", eleventyNavigation.order + 1) %}
        {% if nextLesson %}
          <a href="{{ nextLesson.url | url }}" class="inline-flex items-center ml-auto">
            Next
            {{ icon('arrow-right', class='ml-2') }}
          </a>
        {% endif %}
      </nav>
    </main>

    <footer class="mt-10 py-2 border-t text-gray-500 dark:border-gray-700 dark:text-gray-400">
      <p class="small !mb-0">Built with ‚ù§ by Mubaraq Wahab</p>
    </footer>
  </div>
</div>

{{ script("toggle-outline.js") }}
