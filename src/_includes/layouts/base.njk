{% from "macros.njk" import icon, logo %}

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{ title ~ ' | ' ~ site.title if title else site.title }}</title>
    <link rel="stylesheet" href="{{ '/main.css' | url }}" />
    {% if r/<pre><code /.test(content) %}
      <link rel="stylesheet" href="{{ '/reveal/plugin/highlight/github-dark-dimmed.css' | url }}">
      <style>
        pre code.hljs {
          padding: 0;
        }
      </style>
    {% endif %}
    {% include "meta.njk" %}
  </head>
  <body class="text-gray-700 prose prose-indigo max-w-none bg-white dark:bg-gray-900 dark:prose-light">
    <div class="h-1 bg-indigo-600 sticky top-0 z-20"></div>
    <header class="sticky top-1 left-0 z-30 py-3 bg-white dark:bg-gray-900 border-b border-indigo-200 dark:border-gray-700 max-w-none">
      <div class="container flex items-center justify-between">
        <a class="sr-only focus:not-sr-only focus:absolute focus:left-2 focus:bg-white dark:focus:bg-gray-900" href="#main">Skip to content</a>
        {% if not r/id=(main|'main'|"main")/.test(content) %}
          {{ ('‚ùå Skip link target is missing in page ' ~ page.url ~ '. Add an element with id="main".') | log }}
        {% endif %}
        <a class="flex items-center !no-underline text-lg tracking-wide leading-none" href="{{ '/' | url }}">
          {{ logo(class='mr-1.5') }}
          thinkdev
        </a>

        <div class="flex items-center">
          <a href="{{ site.repoUrl }}" title="View on GitHub" aria-label="View on GitHub" class="inline-flex items-center">
            {{ icon('github', class="text-[#24292e] dark:text-white", width=24, height=24) }}
          </a>

          {% if r/^\/lessons\//.test(page.url) %}
            <button
              type="button"
              aria-label="Toggle outline"
              id="outlineToggle"
              aria-expanded="false"
              aria-controls="outlineNav"
              class="inline-flex items-center ml-3 lg:hidden"
            >
              {{ icon('list', class="text-[#24292e] dark:text-white", width=24, height=24) }}
            </button>
          {% endif %}
        </div>
      </div>
    </header>
    {{ content | safe }}
    {% if r/<pre><code /.test(content) %}
      <script src="{{ '/reveal/plugin/highlight/highlight.js' | url }}"></script>
      <script>RevealHighlight().hljs.highlightAll();</script>
    {% endif %}
  </body>
</html>
