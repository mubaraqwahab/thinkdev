{% from "macros.njk" import icon, logo %}

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{ title ~ ' | ' ~ site.title if title else site.title }}</title>
    <link rel="stylesheet" href="{{ '/assets/css/main.css' | url }}" />

    <link rel="icon" href="/favicon.ico" sizes="any"><!-- 32×32 -->
    <link rel="icon" href="/favicon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/site.webmanifest">
    <meta name="msapplication-TileColor" content="#4f46e5" />
    <meta name="theme-color" content="#4f46e5" />
    <meta name="theme-color" content="#818cf8" media="(prefers-color-scheme: dark)" />

    {# <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#4f46e5" />
     #}
  </head>
  <body class="text-gray-700">
    <div class="top-bar"></div>
    <header class="sticky top-0 left-0 z-20 py-2 bg-white border-b shadow-sm border-indigo-200">
      <div class="container flex items-center justify-between">
        <a class="sr-only focus:absolute focus:left-2 focus:bg-white focus:text-indigo-600 focus:font-medium focus:not-sr-only" href="#main">Skip to content</a>
        {% if not r/id=(main|'main'|"main")/.test(content) %}
          {{ ('❌ Skip link target is missing in page ' ~ page.url ~ '. Add an element with id="main".') | log }}
        {% endif %}
        <a class="flex items-center text-lg text-indigo-600 font-mono font-bold tracking-wide leading-none" href="{{ '/' | url }}">
          {{ logo(class='mr-1') }}
          thinkdev
        </a>

        <div class="flex items-center">
          {# TODO: what's the best element for this? btn? checkbox? switch? radio? #}
          <button class="mr-3">Switch mode</button>
          <a href="{{ site.repoUrl }}" title="View on GitHub" aria-label="View on GitHub" rel="noopener">
            {{ icon('github', width=24, height=24) }}
          </a>
        </div>
      </div>
    </header>
    {{ content | safe }}
  </body>
</html>
