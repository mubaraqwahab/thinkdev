{% from "macros.njk" import icon, logo, script %}

<!DOCTYPE html>
<html lang="en" class="motion-safe:scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{ title ~ ' | ' ~ site.title if title else site.title }}</title>
    {% if r/<pre><code /.test(content) %}
      <link rel="stylesheet" href="{{ '/reveal/plugin/highlight/github-dark-dimmed.css' | url }}" media="(prefers-color-scheme: dark)" />
      <link rel="stylesheet" href="{{ '/reveal/plugin/highlight/github.css' | url }}" media="(prefers-color-scheme: light)" />
      <style>
        pre code.hljs {
          padding: 0;
        }

        @media (prefers-color-scheme: light) {
          .hljs-doctag,
          .hljs-keyword,
          .hljs-meta .hljs-keyword,
          .hljs-template-tag,
          .hljs-template-variable,
          .hljs-type,
          .hljs-variable.language_ {
            color: #cf222e;
          }

          .hljs-built_in, .hljs-symbol {
            color: #b74f07;
          }
        }
      </style>
    {% endif %}
    <link rel="stylesheet" href="{{ '/main.css' | url }}" />
    {% include "meta.njk" %}
  </head>
  {# The flex and flex col class allows the main body to stretch vertically #}
  <body class="flex flex-col min-h-screen text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-900">
    {{ content | safe }}
    <footer class="text-sm text-gray-600 dark:text-gray-400">
      <div class="container">
        <div class="border-t py-7">
          <p class="mb-2 sm:inline sm:pr-3 sm:border-r">
            Built with ‚ù§ by <a href="{{ site.author.url }}" class="footer-link">Mubaraq Wahab</a>
          </p>
          <p class="mb-2 sm:inline sm:px-3 sm:border-r">
            <a class="footer-link" href="{{ site.repoUrl }}/edit/main/{{ page.inputPath }}">Edit this page</a>
          </p>
          <p class="mb-2 sm:inline sm:pl-3">
            <a class="footer-link" href="{{ site.repoUrl }}">View the source</a>
          </p>
        </div>
      </div>
    </footer>
  </body>
</html>
