{% from "macros.njk" import icon, logo %}

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{ title ~ ' | ' ~ site.title if title else site.title }}</title>
    <link rel="stylesheet" href="{{ '/main.css' | url }}" />
    {% include "meta.njk" %}
  </head>
  <body class="text-gray-700">
    <div class="top-bar"></div>
    <header class="sticky top-1 left-0 z-20 py-2 bg-white border-b shadow-sm border-indigo-200 prose prose-indigo max-w-none">
      <div class="container flex items-center justify-between">
        <a class="sr-only focus:absolute focus:left-2 focus:bg-white focus:not-sr-only" href="#main">Skip to content</a>
        {% if not r/id=(main|'main'|"main")/.test(content) %}
          {{ ('‚ùå Skip link target is missing in page ' ~ page.url ~ '. Add an element with id="main".') | log }}
        {% endif %}
        <a class="flex items-center !no-underline lg:text-lg tracking-wide leading-none" href="{{ '/' | url }}">
          {{ logo(class='mr-1.5') }}
          thinkdev
        </a>

        <div class="flex items-center">
          {# TODO: what's the best element for this? btn? checkbox? switch? radio? #}
          {# <button class="mr-3">Switch mode</button> #}
          <a href="{{ site.repoUrl }}" title="View on GitHub" aria-label="View on GitHub" rel="noopener" class="inline-flex items-center">
            {{ icon('github', class="text-[#24292e] dark:text-white", width=24, height=24, attrs={ hi: '', ariaChecked: false }) }}
          </a>
        </div>
      </div>
    </header>
    {{ content | safe }}
  </body>
</html>
