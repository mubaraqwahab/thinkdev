{% from "macros.njk" import icon, logo, script %}

<!DOCTYPE html>
<html lang="en" class="motion-safe:scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{ title ~ ' | ' ~ site.title if title else site.title }}</title>
    {% if r/<pre><code /.test(content) %}
      <link rel="stylesheet" href="{{ '/reveal/plugin/highlight/github-dark-dimmed.css' | url }}" media="(prefers-color-scheme: dark)" />
      <link rel="stylesheet" href="{{ '/reveal/plugin/highlight/github.css' | url }}" media="(prefers-color-scheme: light)" />
      <style>
        pre code.hljs {
          padding: 0;
        }

        @media (prefers-color-scheme: light) {
          .hljs-doctag,
          .hljs-keyword,
          .hljs-meta .hljs-keyword,
          .hljs-template-tag,
          .hljs-template-variable,
          .hljs-type,
          .hljs-variable.language_ {
            color: #cf222e;
          }

          .hljs-built_in, .hljs-symbol {
            color: #b74f07;
          }
        }
      </style>
    {% endif %}
    <link rel="stylesheet" href="{{ '/main.css' | url }}" />
    {% include "meta.njk" %}
  </head>
  {# The flex and flex col class allows the main body to stretch vertically #}
  <body class="flex flex-col min-h-screen text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-900">
    <div class="h-1 bg-indigo-600 dark:bg-indigo-400 sticky top-0 z-50"></div>
    <header class="sticky top-1 left-0 z-50 py-3 font-semibold text-sm bg-white dark:bg-gray-900 border-b">
      <div class="container flex items-center justify-between">
        <a class="sr-only focus:not-sr-only focus:absolute focus:left-2 focus:bg-white dark:focus:bg-gray-900" href="#main">Skip to content</a>
        {% if not r/id=(main|'main'|"main")/.test(content) %}
          {{ ('❌ Skip link target is missing in page ' ~ page.url ~ '. Add an element with id="main".') | log }}
        {% endif %}
        <a class="flex items-center no-underline text-lg font-mono leading-none tracking-tight text-indigo-600 dark:text-indigo-300" href="{{ '/' | url }}">
          {{ logo(class='mr-1.5') }}
          thinkdev
        </a>

        <div class="flex items-center">
          {% if "home" in tags %}
            <a href="#lessons" class="inline-flex items-center hover:text-gray-900 hover:dark:text-gray-100">Lessons</a>
          {% elif "lesson" in tags %}
            <button
              type="button"
              aria-label="Toggle lesson navigation"
              id="lessonsNavToggle"
              aria-expanded="false"
              aria-controls="lessonsNav"
              class="inline-flex items-center hover:text-gray-900 hover:dark:text-gray-100 lg:hidden"
            >
              {{ icon('list', width=24, height=24) }}
            </button>
          {% endif %}
        </div>
      </div>
    </header>
    {{ content | safe }}
    <footer class="text-sm text-gray-600 dark:text-gray-400">
      <div class="container">
        <div class="border-t py-7">
          <p class="mb-2 sm:inline sm:pr-3 sm:border-r">
            Built with ❤ by <a href="{{ site.author.url }}" class="footer-link">Mubaraq Wahab</a>
          </p>
          <p class="mb-2 sm:inline sm:px-3 sm:border-r">
            <a class="footer-link" href="{{ site.repoUrl }}/edit/main/{{ page.inputPath }}">Edit this page</a>
          </p>
          <p class="mb-2 sm:inline sm:pl-3">
            <a class="footer-link" href="{{ site.repoUrl }}">View the source</a>
          </p>
        </div>
      </div>
    </footer>
  </body>
</html>
