{% macro icon(id, class='', width=16, height=16) -%}
<svg aria-hidden="true" class="bi bi-{{ id }} {{ class }}" width="{{ width }}" height="{{ height }}">
  <use xlink:href="{{ ('/assets/images/bootstrap-icons.svg#' ~ id) | url }}"/>
</svg>
{%- endmacro %}

{% macro emoji(e) -%}
<span aria-hidden="true" class="emoji">{{ e }}</span>
{%- endmacro %}

{% macro logo() -%}
<span
  style="
    display: inline-block;
    font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, 'Liberation Mono', 'Courier New', monospace;
    font-weight: 700;
    letter-spacing: 0.025em;
  "
>thinkdev</span>
{%- endmacro %}