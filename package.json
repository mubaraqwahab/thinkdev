{
  "name": "bootstrap-11ty-starter",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "start": "npm-run-all clear --parallel watch-html watch-css",
    "watch-css": "tailwindcss -i src/css/main.css -o _site/css/style.css --watch",
    "watch-html": "eleventy --serve",
    "build": "npm-run-all clear build-css build-html",
    "build-html": "eleventy",
    "build-css": "tailwindcss -i src/css/main.css -o _site/css/style.css --minify",
    "clear": "shx rm -rf _site/ src/dist/",
    "prepare": "husky install",
    "format": "prettier --write *.{js,html,css,scss,json}"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mubaraqwahab/bootstrap-11ty-starter.git"
  },
  "bugs": {
    "url": "https://github.com/mubaraqwahab/bootstrap-11ty-starter/issues"
  },
  "homepage": "https://github.com/mubaraqwahab/bootstrap-11ty-starter#readme",
  "dependencies": {
    "@11ty/eleventy": "^0.12.1",
    "@babel/core": "^7.14.8",
    "@babel/preset-env": "^7.14.8",
    "@tailwindcss/typography": "^0.4.1",
    "bootstrap-icons": "^1.5.0",
    "html-minifier": "^4.0.0",
    "npm-run-all": "^4.1.5",
    "reveal.js": "^4.1.3",
    "shx": "^0.3.3",
    "tailwindcss": "^2.2.15",
    "terser": "^5.7.1"
  },
  "devDependencies": {
    "husky": "^7.0.0",
    "lint-staged": "^11.0.1",
    "prettier": "2.3.2"
  },
  "lint-staged": {
    "*.{js,html,css,scss,json,md}": "npx prettier --write"
  }
}
